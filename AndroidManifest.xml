<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yojiokisoft.japanesecalc"
    android:installLocation="preferExternal"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.yojiokisoft.japanesecalc.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yojiokisoft.japanesecalc.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yojiokisoft.japanesecalc.activity.SoundActivity"
            android:label="@string/title_activity_sound" >
        </activity>
        <activity
            android:name="com.yojiokisoft.japanesecalc.activity.SkinActivity"
            android:label="@string/title_activity_skin" >
        </activity>
    </application>

</manifest>